<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_field"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/farm_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_farm_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="666" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/farm_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="My farm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/farm_zip_code"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_farm_zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/farm_phone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_farm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="916548789" />
    </LinearLayout>

</LinearLayout>